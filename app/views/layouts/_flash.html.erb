<%# フラッシュメッセージの表示 部分テンプレート %>
<div class = "container">
  <div class = "row">
    <% if notice%>
	  <div class = "flash notice">
	    <span id = "notice"><%= notice %></span>
	  </div>
    <% elsif flash[:success] %>
	  <div class = "flash success">
  	    <span id = "success"><%= flash[:success] %></span>
	  </div>
    <% elsif flash[:alert] %>
	  <div class = "flash alert">
	    <span id = "alert"><%= flash[:alert] %></span>
	  </div>
    <% end %>
  </div>
</div>
