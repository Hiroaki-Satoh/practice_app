<%# Book投稿一覧ページ %>
<div class = "container">
  <div class = "row">
    <div class = "col-xs-3">
      <h2>User info</h2>
      <%= render 'users/profile', user: current_user %>

      <h2>New book</h2>
	  <%= render 'newform', book: @book %>
    </div>

    <%# Book 一覧表示 %>
    <div class = "col-xs-9">
	  <h2>Books index</h2>
        <table class = "table table-hover table-inverse">
		  <thead>
			<tr>
			  <th>Posted by</th>
			  <th>Title</th>
			  <th>Opinion</th>
			  <th colspan = "3"></th>
			</tr>
		  </thead>

          <tbody>
            <% @books.each do |book| %>
			  <tr>
				<td>
				  <%= link_to(book.user) do %>
					<%= attachment_image_tag(book.user, :profile_image,
					  :size => '50x50', fallback: "no-image.jpg") %>
				  <% end %>
				</td>
				<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
				<td><%= book.body %></td>
				<%# いいねの表示 %>
				<%= render 'favorites/favorite', book: book %>
			  </tr>
			<% end %>
		  </tbody>
		</table>
	  </div>
	<%# Book 一覧表示 ここまで %>
  </div>
</div>
