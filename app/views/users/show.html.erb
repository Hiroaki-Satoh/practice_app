<!-- マイページ (ユーザ詳細ページ）-->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <!-- プロフィール表示の部分テンプレート呼び出し -->
      <%= render '/profile', user: @user %>

      <h2>New book</h2>
      <!-- 新規投稿フォームの部分テンプレート呼び出し -->
		<%= render 'books/newform', book: @book %>
    </div>

    <!-- Books一覧の表示 -->
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
		  <tr>
		    <th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		  </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
			  <td>
				<%= link_to (book.user) do %>
				  <%= attachment_image_tag(book.user, :profile_image,
				    :size => '50x50', fallback: "no-image-mini.jpg") %>
				<% end %>
			  </td>
			  <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
			  <td><%= book.body %></td>
		    </tr>
		  <% end %>
		</tbody>
	  </table>
	</div>
	<!-- books一覧 ここまで -->
  </div>
</div>
